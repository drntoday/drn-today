---
// Layout.astro
const { title } = Astro.props;
const siteTitle = "DRN.today";
const pageTitle = title ? `${title} · ${siteTitle}` : siteTitle;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Founder-built web systems that replace spreadsheets, reduce operational friction, and bring clarity — designed and executed by a single accountable founder." />
    
    <title>{pageTitle}</title>
    
    <!-- Open Graph -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content="Founder-built web systems for operational clarity" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content="Founder-built web systems for operational clarity" />
    
    <!-- Canonical -->
    <link rel="canonical" href={Astro.url} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Styles -->
    <style>
      :root {
        /* Color Palette */
        --color-bg-primary: #0a0a0f;
        --color-bg-secondary: #111118;
        --color-bg-surface: #1a1a23;
        
        --color-text-primary: #f0f0f5;
        --color-text-secondary: #b0b0c0;
        --color-text-tertiary: #808090;
        
        --color-accent: #3a8bba;
        --color-accent-hover: #4a9bca;
        --color-accent-active: #2a7baa;
        
        --color-border: #2a2a35;
        --color-divider: #333340;
        
        /* Typography */
        --font-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
        --font-mono: 'SF Mono', Monaco, Consolas, monospace;
        
        /* Spacing */
        --spacing-unit: 8px;
        --container-width: 1200px;
      }
      
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: var(--font-sans);
        background: linear-gradient(180deg, var(--color-bg-primary) 0%, var(--color-bg-secondary) 100%);
        color: var(--color-text-primary);
        line-height: 1.6;
        min-height: 100vh;
      }
      
      a {
        color: var(--color-accent);
        text-decoration: none;
        transition: color 0.2s ease;
      }
      
      a:hover {
        color: var(--color-accent-hover);
      }
      
      .container {
        max-width: var(--container-width);
        margin: 0 auto;
        padding: 0 calc(var(--spacing-unit) * 3);
      }
      
      /* Button Styles */
      .btn {
        display: inline-block;
        padding: calc(var(--spacing-unit) * 1.5) calc(var(--spacing-unit) * 3);
        border-radius: 4px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.2s ease;
        border: none;
        font-family: inherit;
      }
      
      .btn-primary {
        background: var(--color-accent);
        color: white;
      }
      
      .btn-primary:hover {
        background: var(--color-accent-hover);
        color: white;
      }
      
      .btn-secondary {
        background: transparent;
        color: var(--color-accent);
        border: 1px solid var(--color-accent);
      }
      
      .btn-secondary:hover {
        background: rgba(58, 139, 186, 0.1);
      }
      
      /* Navigation */
      .nav {
        background: rgba(10, 10, 15, 0.95);
        backdrop-filter: blur(10px);
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        height: 64px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 calc(var(--spacing-unit) * 3);
        z-index: 1000;
        border-bottom: 1px solid var(--color-border);
      }
      
      .nav-logo {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--color-text-primary);
      }
      
      .nav-links {
        display: flex;
        gap: calc(var(--spacing-unit) * 2);
        align-items: center;
      }
      
      .nav-link {
        color: var(--color-text-secondary);
        font-size: 0.95rem;
        font-weight: 500;
        padding: calc(var(--spacing-unit) * 0.5) calc(var(--spacing-unit) * 2);
      }
      
      .nav-link:hover {
        color: var(--color-text-primary);
      }
      
      /* Main Content */
      main {
        padding-top: 64px;
        min-height: calc(100vh - 200px);
      }
      
      /* Footer */
      .footer {
        background: var(--color-bg-primary);
        border-top: 1px solid var(--color-border);
        padding: calc(var(--spacing-unit) * 6) 0;
        color: var(--color-text-tertiary);
        font-size: 0.9rem;
      }
      
      .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      
      .footer-links {
        display: flex;
        gap: calc(var(--spacing-unit) * 3);
      }
      
      .footer-link {
        color: var(--color-text-secondary);
      }
      
      .footer-link:hover {
        color: var(--color-text-primary);
      }
      
      /* Utility Classes */
      .text-center { text-align: center; }
      .mt-1 { margin-top: var(--spacing-unit); }
      .mt-2 { margin-top: calc(var(--spacing-unit) * 2); }
      .mt-3 { margin-top: calc(var(--spacing-unit) * 3); }
      .mt-4 { margin-top: calc(var(--spacing-unit) * 4); }
      .mt-6 { margin-top: calc(var(--spacing-unit) * 6); }
      .mt-8 { margin-top: calc(var(--spacing-unit) * 8); }
      
      .mb-1 { margin-bottom: var(--spacing-unit); }
      .mb-2 { margin-bottom: calc(var(--spacing-unit) * 2); }
      .mb-3 { margin-bottom: calc(var(--spacing-unit) * 3); }
      .mb-4 { margin-bottom: calc(var(--spacing-unit) * 4); }
      .mb-6 { margin-bottom: calc(var(--spacing-unit) * 6); }
      .mb-8 { margin-bottom: calc(var(--spacing-unit) * 8); }
      
      .py-6 { padding-top: calc(var(--spacing-unit) * 6); padding-bottom: calc(var(--spacing-unit) * 6); }
      .py-8 { padding-top: calc(var(--spacing-unit) * 8); padding-bottom: calc(var(--spacing-unit) * 8); }
      .py-12 { padding-top: calc(var(--spacing-unit) * 12); padding-bottom: calc(var(--spacing-unit) * 12); }
      
      /* Responsive */
      @media (max-width: 768px) {
        .container {
          padding: 0 calc(var(--spacing-unit) * 2);
        }
        
        .nav {
          padding: 0 calc(var(--spacing-unit) * 2);
        }
        
        .footer-content {
          flex-direction: column;
          gap: calc(var(--spacing-unit) * 3);
          text-align: center;
        }
      }
    </style>
  </head>
  <body>
    <nav class="nav">
      <a href="/" class="nav-logo">DRN.today</a>
      <div class="nav-links">
        <a href="/work" class="nav-link">Work</a>
        <a href="/principles" class="nav-link">Principles</a>
        <a href="/about" class="nav-link">About</a>
        <a href="/contact" class="btn btn-primary">Describe Your Challenge</a>
      </div>
    </nav>
    
    <main>
      <slot />
    </main>
    
    <footer class="footer">
      <div class="container footer-content">
        <div>
          © 2024 DRN.today · Founder-built systems
        </div>
        <div class="footer-links">
          <a href="/work" class="footer-link">Work</a>
          <a href="/principles" class="footer-link">Principles</a>
          <a href="/about" class="footer-link">About</a>
          <a href="/contact" class="footer-link">Contact</a>
        </div>
      </div>
    </footer>
  </body>
</html>
